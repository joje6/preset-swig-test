{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://cloudtype.io/presets/node-{{ version }}.schema.json",
  "type": "object",
  "properties": {
    "giturl": {
      "title": "Git Url",
      "type": "string",
      "maxLength": 255,
      "attrs": {
        "placeholder": "Git Url"
      }
    },
    "gitbranch": {
      "title": "Git Branch",
      "type": "string",
      "maxLength": 255,
      "attrs": {
        "placeholder": "Git Branch"
      }
    },
    "gitrevision": {
      "title": "Git Revision",
      "type": "string",
      "maxLength": 255,
      "attrs": {
        "placeholder": "Git Revision"
      }
    },
    "port": {
      "title": "Expose Port",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "attrs": {
        "placeholder": "ex) 9000"
      }
    },
    "preinstall": {
      "title": "Pre Install Command",
      "type": "string",
      "maxLength": 255,
      "attrs": {
        "placeholder": "npm install --production"
      }
    },
    "install": {
      "title": "Install Command",
      "type": "string",
      "maxLength": 255,
      "attrs": {
        "placeholder": "npm install --production"
      }
    },
    "start": {
      "title": "Start Command",
      "type": "string",
      "maxLength": 255,
      "attrs": {
        "placeholder": "npm start"
      }
    },
    "size": {
      "type": "string",
      "title": "Volume Size",
      "enum": ["300M", "500M", "1G", "2G", "5G", "10G"],
      "attrs": {
        "placeholder": "Select Volume Size"
      }
    }
  },
  "required": []
}
